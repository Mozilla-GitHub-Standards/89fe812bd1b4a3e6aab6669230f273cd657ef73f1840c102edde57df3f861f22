// Explore
x-appbar
    header
        visibility hidden

    &.explore
        #explore-link
            visibility hidden
        header
            margin-right -25px
            text-align right
            visibility visible

.explore
    #sections
        span
            color #fefefe
            left 4px
            position absolute
            top 8px
        select
            margin-left 40px

li.venue
    background no-repeat 100% 50% / 150px auto
    border-bottom 1px solid #8a8a8a
    border-bottom 1px solid #cdcdcd
    color #001017
    display block
    min-height 100px

    h3
        background rgba(239, 239, 239, .75)
        border-bottom 1px solid #cdcdcd
        font-size 22px
        line-height 1.6em
        overflow hidden
        text-overflow ellipsis
        white-space nowrap

    p
        font-size 12px
        line-height 1.3em

.area-container
    background #00405d
    color #eaeaea

    #sections, .venue-search
        background transparent
        height 30px
        overflow hidden
        position relative
        width auto

        select, input
            background transparent
            border 0
            border-radius 0
            color #fefefe
            font-size 16px
            height 30px
            line-height 1
            outline none
            padding 3px 0 0 3px
            -webkit-appearance none
            -moz-outline-style none
            width 120%
            &:active, &:focus
                outline 0
                -moz-outline-style none
            &::-webkit-input-placeholder
                color #fefefe
                opacity 1
                text-shadow 0
            &::-moz-placeholder
                color #fefefe
                opacity 1
                text-shadow 0
            &::-ms-input-placeholder
                color #fefefe
                opacity 1
                text-shadow 0
        input
            height 25px
            padding-bottom 0
            padding-right 20px
            width 70%
            &:active, &:focus
                border-bottom 1px solid

        button
            background none
            border 0
            font-size 20px
            left 70%
            margin-left 5px
            padding 0
            position absolute
            top 4px
            z-index 14000

            &[type="reset"]
                visibility hidden

                &.visible
                    visibility visible

            &[type="submit"]
                margin-left 30px

    .data-attribution
        float right
        font-size .6em
        margin 2.5% 5px 0 0

    &:after
        clear both
        content ""
        display block

    h4
        padding 0 0 3px 6px

.venue-summary
    &:after
        clear both
        content ""
        display block

    .subheader, .check-in
        display inline-block
        vertical-align middle

    .subheader
        margin 0 5px

    .subheader + .check-in
        margin-right 5px

.tips.venue
    .tip
        border 1px solid gray
        clear both
        margin 5px auto
        max-width 90%
        padding 5px

        &:after
            clear both
            content ""
            display block

        .text
            font-size .9em
            margin 0 0 .75em

        .author
            float right

            &:before
                content "â€”"

.photos.venue
    display block
    margin 0 auto
    text-align center

    li
        display inline

    .photo
        background #fff no-repeat center center/200px auto
        border 1px solid #cfcfcf
        display inline-block
        height 100px
        width 30%
